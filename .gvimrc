"------------------------------------------------------------------------------
" 初期設定
"
colorscheme desert256
hi LineNr guifg = gray35

"------------------------------------------------------------------------------
" ウィンドウ設定
"
set columns=110
set lines=60
set transparency=10
set guioptions-=T

"------------------------------------------------------------------------------
" フォント
"
set guifont=Monaco:h12
set guifontwide=Monaco:h12
set linespace=0

highlight CursorIM guibg=#1e90ff guifg=NONE

